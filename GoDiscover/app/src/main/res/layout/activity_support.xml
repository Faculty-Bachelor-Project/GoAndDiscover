<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".support">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/dbTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="Contact"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:layout_centerVertical="true"
                android:shadowRadius="5"
                android:textColor="@color/white"
                android:gravity="center_horizontal" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/user1"
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/avatar"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:text="Nume: Zaharia George Andrei "
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textAlignment="viewStart"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="E-mail: zaharia.andrei@ymail.com"
                tools:ignore="RtlCompat"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/nrtel"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:text="Nr tel: +40 774 483 626"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:layout_below="@id/emailText"
                android:textSize="14dp"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:id="@+id/insta_btn"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_below="@+id/nrtel"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/insta"/>

            <ImageButton
                android:id="@+id/facebook_btn"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_below="@+id/nrtel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/facebook"/>

            <ImageButton
                android:id="@+id/github_btn"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_below="@+id/nrtel"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/github"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/user2"
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user1"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/avatar"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/name1"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:text="Nume: Sarca Florin Sabin "
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/emailText1"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textAlignment="viewStart"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="E-mail: florin.sarca@student.unitbv.ro"
                tools:ignore="RtlCompat"
                android:layout_below="@+id/name1"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/nrtel1"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:text="Nr tel: +40 730 852 355"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:layout_below="@id/emailText1"
                android:textSize="14dp"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:id="@+id/insta_btn1"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_below="@+id/nrtel1"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/insta"/>

            <ImageButton
                android:id="@+id/facebook_btn1"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_below="@+id/nrtel1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/facebook"/>

            <ImageButton
                android:id="@+id/github_btn1"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_below="@+id/nrtel1"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/github"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>